<!DOCTYPE html>
<html>
  <head>
    <title>Resume Analysis Results</title>
    <link rel="stylesheet" href="styles/results.css" />
  </head>
  <body>
    <h1>Resume Analysis Results</h1>
    <div class="container">
      <% resumes.forEach(resume => { %>
      <div class="card">
        <h2><%= resume.candidate_name %></h2>
        <p class="email-phone"><%= resume.email %> | <%= resume.phone %></p>
        <p><strong>Education:</strong> <%= resume.education %></p>
        <p><strong>Experience:</strong> <%= resume.years_of_experience %></p>
        <p><strong>Last Company:</strong> <%= resume.last_company %></p>

        <% if (resume.summary) { %>
        <strong>Summary:</strong>
        <p class="summary"><%= resume.summary %></p>
        <% } %> <% if (resume.skills) { const skills =
        JSON.parse(resume.skills); %>
        <h3>Skills</h3>
        <ul>
          <% Object.entries(skills).forEach(([category, items]) => { %>
          <li><strong><%= category %>:</strong> <%= items.join(", ") %></li>
          <% }) %>
        </ul>
        <% } %> <% if (resume.projects) { const projects =
        JSON.parse(resume.projects); %>
        <h3>Projects</h3>
        <% projects.forEach(project => { %>
        <div class="project">
          <strong><%= project.title %>:</strong> <%= project.summary %>
          <div class="tech-stack">Tech: <%= project.tech_stack %></div>
        </div>
        <% }) %> <% } %>
      </div>
      <% }) %>
    </div>
  </body>
</html>
